<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
<main>
    <div class="articles">
        <h2>Articles will be listed here</h2>

        <% if (articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <h3><%= article.title %></h3>
                <p><%= article.author %></p>
            <% }); %>
        <% } else { %>
            <p>Sorry, but there are no articles to display.</p>
            <% } %>

    </div>
</main>


<%- include('./partials/footer.ejs') %>

